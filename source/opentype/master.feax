feature abvm {
    script DFLT;
        language dflt;
            lookup AboveMarks;

    script ory2;
        language dflt;
            lookup AboveMarks;
} abvm;

feature blwm {
    script DFLT;
        language dflt;
            lookup BelowMarks;

    script ory2;
        language dflt;
            lookup BelowMarks;
} blwm;

table GDEF {
    GlyphClassDef @GDEF_bases, , @GDEF_marks, ;
} GDEF;
